{
    "name": "good-watches",
    "version": "1.0.0",
    "description": "recommends movies",
    "main": "server.js",
    "scripts": {
        "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
        "start:prod": "node server.js",
        "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
        "client": "cd client && npm run start",
        "install": "cd client && npm install",
        "build": "cd client && npm run build",
        "heroku-postbuild": "npm run build",
        "test": "mocha",
        "fix": "node ./node_modules/eslint/bin/eslint.js --fix server.js routes/ models/ client/src",
        "fix-dry": "node ./node_modules/eslint/bin/eslint.js --fix-dry-run server.js routes/ models/ client/src"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/trodge/Project-3.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/trodge/Project-3/issues"
    },
    "homepage": "https://good-watches.herokuapp.com/",
    "dependencies": {
        "axios": "0.19.0",
        "cookie-parser": "^1.4.4",
        "cookie-session": "^1.3.3",
        "dotenv": "^8.2.0",
        "express": "4.17.1",
        "if-env": "^1.0.4",
        "mongodb": "^3.3.3",
        "mongoose": "^5.7.7",
        "passport": "^0.4.0",
        "passport-google-oauth20": "^2.0.0",
        "passport-twitter": "^1.0.4"
    },
    "devDependencies": {
        "concurrently": "^5.0.0",
        "eslint": "^6.6.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-flowtype": "^4.3.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.16.0",
        "eslint-plugin-react-hooks": "^2.2.0",
        "eslint-plugin-standard": "^4.0.1",
        "node-sass": "^4.12.0",
        "nodemon": "^1.19.4",
        "prettier": "^1.19.1",
        "prettier-eslint": "^9.0.0",
        "supertest": "^4.0.2"
    }
}
